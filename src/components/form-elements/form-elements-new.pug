mixin text_field({title, value='', placeholder=''})
    label.text-h3 #{title}
        input.text-field(type="text" value=value placeholder=placeholder)

mixin masked_text_field_date({title})
    label.text-h3 #{title}
        input.text-field.text-field_masket_date(type="text" placeholder="ДД.ММ.ГГГГ")

mixin text_field_subscription({title, value='', placeholder='', type='email'})
    .text-field-subscription
        label.text-h3 #{title}
            input.text-field(value=value placeholder=placeholder, type=type)
        span
            svg(width="18" height="18" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg")
                path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z")

mixin dropdown_bedrooms({title, value, placeholder=''})
    .text-field-dropdown
        label.text-h3 #{title}
            input.text-field(value=value placeholder=placeholder, type=type, readonly)
        span
            svg(width="13" height="8" viewBox="0 0 13 8" xmlns="http://www.w3.org/2000/svg")
                path(d="M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z")
        .text-field-dropdown__content
            .text-field-dropdown__item.dropdown-item.text-h3
                .dropdown-item__title спальни
                .dropdown-item__actions 
                    .dropdown-item__button.fw-400 &ndash;
                    .dropdown-item__number 2
                    .dropdown-item__button.fw-400 +
            .text-field-dropdown__item.dropdown-item.text-h3
                .dropdown-item__title кровати
                .dropdown-item__actions 
                    .dropdown-item__button.fw-400 &ndash;
                    .dropdown-item__number 21
                    .dropdown-item__button.fw-400 +
            .text-field-dropdown__item.dropdown-item.text-h3
                .dropdown-item__title ванные комнаты
                .dropdown-item__actions 
                    .dropdown-item__button.fw-400.dropdown-item__button_disabled &ndash;
                    .dropdown-item__number 0
                    .dropdown-item__button.fw-400 +